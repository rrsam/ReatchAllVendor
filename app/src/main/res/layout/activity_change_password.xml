<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">

        <include layout="@layout/toolbar_privacy_settings"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_business"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:scrollbars="none"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentPassowrd"
                android:hint="Current Password"
                android:textColor="@color/black"
                android:background="@drawable/grey_rounded"
                android:padding="15dp"
                android:textSize="18sp"
                android:inputType="textPassword"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newPassword"
                android:hint="New Password"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:background="@drawable/grey_rounded"
                android:padding="15dp"
                android:textSize="18sp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newCnfrmPassword"
                android:hint="Confirm Password"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:background="@drawable/grey_rounded"
                android:padding="15dp"
                android:textSize="18sp"
                android:inputType="text"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <Button
                    android:id="@+id/saveChanges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/blue_rounded"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/cancel_grey_border"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>