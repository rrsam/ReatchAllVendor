<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_password"
    tools:context=".Registration.ChooseUserActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_navigate"
            android:id="@+id/back_arrow"
            android:layout_margin="10dp"/>


        <ScrollView
            android:layout_below="@id/back_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_margin="20dp">




                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESET PASSWORD"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/back_arrow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />



                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile :"
                    android:layout_marginTop="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumber"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/getOTP"
                    android:text="GET OTP"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/orange_rounded_bg"
                    android:textColor="@color/white"/>



                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP :"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otp"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password :"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password :"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cnfrmPassword"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>


                <fr.arnaudguyon.smartfontslib.FontButton
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resetPassword"
                    android:text="RESET PASSWORD"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@color/dark_orange"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </ScrollView>




    </RelativeLayout>



</RelativeLayout>