<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vendor_register"
    tools:context=".Registration.ChooseUserActivity">


    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_navigate"
            android:id="@+id/back_arrow"
            android:layout_margin="10dp"/>


        <ScrollView
            android:layout_below="@id/back_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_margin="20dp">




                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VENDOR REGISTER"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/back_arrow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userFirstName"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:background="@drawable/white_bottom_border"/>


                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile :"
                    android:layout_marginTop="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumber"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:layout_marginTop="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender :"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:padding="10dp"
                    style="@style/SpinnerTheme"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth :"
                    android:layout_marginTop="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dob"
                    android:inputType="text"
                    android:focusable="false"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password :"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cnfrmPassword"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/white_bottom_border"/>


                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referral Code :"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <fr.arnaudguyon.smartfontslib.FontEditText
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userLastName"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:background="@drawable/white_bottom_border"/>


                <fr.arnaudguyon.smartfontslib.FontButton
                    app:smart_font="fonts/Montserrat-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerBtn"
                    android:text="REGISTER"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/orange_rounded_bg"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </ScrollView>




    </RelativeLayout>



</RelativeLayout>