        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/light_grey"
            android:layout_marginBottom="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:clipToPadding="false"
            android:layout_height="wrap_content">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_yellow"
                    android:padding="10dp">





                    <fr.arnaudguyon.smartfontslib.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Special Offer"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:id="@+id/offerName"
                        app:smart_font="fonts/Montserrat-Regular.ttf" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/offer_icon"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Offer Type"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Flat"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/offerType"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Discount Type"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Rupees"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/discountType"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Discount"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="500"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/discountValue"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Open"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/offerStatus"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Starts at"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="20/08/2018 18:43"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/startTime"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Ends at"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="20/08/2018 18:43"
                            android:textColor="@color/red_other"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:paddingRight="10dp"
                            android:id="@+id/endTime"
                            app:smart_font="fonts/Montserrat-Regular.ttf" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_dark"
                    android:id="@+id/seeItemsLayout"
                    android:padding="10dp">

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="See Items"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:smart_font="fonts/Montserrat-Regular.ttf" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_next_icon_black"/>
                </RelativeLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </FrameLayout>
</com.reatchall.charan.reatchallVendor.Utils.SwipeRevealLayout>