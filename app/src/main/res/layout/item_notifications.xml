<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/notificationLogo"
       >

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:smart_font="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Order !"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/notification_title"
            />

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:smart_font="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your order has been picked up by our delivery person"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:id="@+id/notification_msg"
            />



    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/notificationLogo"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_new_order"/>



</RelativeLayout>