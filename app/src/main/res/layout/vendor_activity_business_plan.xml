<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.reatchall.charan.reatchallVendor.Vendor.VendorBusinessPlanActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileToolBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/back_arrow"
                    android:src="@drawable/ic_back_navigate"/>
                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Montserrat-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:id="@+id/title_toolbar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/back_arrow"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Business Plans"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:smart_font="fonts/Montserrat-Bold.ttf" />

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_height="2dp"
                    android:background="@color/dark_orange"
                    />

            </LinearLayout>

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Your Current Plan is"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:smart_font="fonts/Montserrat-Regular.ttf" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="FREE"
                    android:textColor="@color/dark_orange"
                    android:textSize="30sp"
                    android:id="@+id/planTV"
                    app:smart_font="fonts/Gotham-Book.otf" />

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_height="1dp"
                    android:background="@color/red_new"
                    />

            </LinearLayout>

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="You can now upgrade your plan to the following packages and get added benefits"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:smart_font="fonts/Montserrat-Regular.ttf" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:scrollbars="horizontal|vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/freeLayout"
                        android:background="@color/dark_orange"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:id="@+id/freeIV"
                            android:src="@drawable/plan_checked"/>

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="FREE"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:paddingTop="20dp"
                            android:paddingBottom="40dp"
                            app:smart_font="fonts/alph.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/silverLayout"
                        android:background="@color/dark_orange"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:id="@+id/silverIV"
                            android:src="@drawable/plan_checked"/>

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="SILVER"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:paddingTop="20dp"
                            android:paddingBottom="40dp"
                            app:smart_font="fonts/alph.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/goldLayout"
                        android:background="@color/dark_orange"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:id="@+id/goldIV"
                            android:src="@drawable/plan_checked"/>

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="GOLD"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:paddingTop="20dp"
                            android:paddingBottom="40dp"
                            app:smart_font="fonts/alph.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/platinumLayout"
                        android:background="@color/dark_orange"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:id="@+id/platinumIV"
                            android:src="@drawable/plan_checked"/>

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="PLATINUM"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:paddingTop="20dp"
                            android:paddingBottom="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            app:smart_font="fonts/alph.ttf" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <fr.arnaudguyon.smartfontslib.FontButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="View Details and Checkout"
                android:textSize="14sp"
                android:id="@+id/viewDetails"
                android:textColor="@color/white"
                app:smart_font="fonts/Montserrat-Regular.ttf"
                android:background="@color/red_new"/>

            <fr.arnaudguyon.smartfontslib.FontButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"
                android:text="Compare packages"
                android:textSize="14sp"
                android:id="@+id/comparePlans"
                android:textColor="@color/white"
                app:smart_font="fonts/Montserrat-Regular.ttf"
                android:background="@color/dark_orange"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
