<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topView"
       >

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:smart_font="fonts/Montserrat-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address 1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/addressNumberOrTitle"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/light_grey"
            />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2"
           android:layout_marginTop="70dp"
           android:layout_below="@id/addressNumberOrTitle"
           android:id="@+id/editRemoveLayout">

           <fr.arnaudguyon.smartfontslib.FontTextView
               app:smart_font="fonts/Montserrat-Regular.ttf"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="Edit"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:padding="15dp"
                android:gravity="center"
               android:id="@+id/editAddress"
               android:background="@drawable/edit_background_grey"
               />

           <fr.arnaudguyon.smartfontslib.FontTextView
               app:smart_font="fonts/Montserrat-Regular.ttf"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="Remove"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:padding="15dp"
               android:gravity="center"
               android:id="@+id/removeAddress"
               android:background="@drawable/remove_bg_grey"
               />

       </LinearLayout>





    </RelativeLayout>

</RelativeLayout>